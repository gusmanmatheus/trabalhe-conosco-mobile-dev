<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF1D1E21"
        tools:context=".feature.ContactsActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
    >

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main.collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                android:background="#FF1D1E21"
                android:fitsSystemWindows="true"

        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="40dp"
                    android:text="Contatos"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="#FFFFFF"/>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

        <EditText android:id="@+id/procurar_Contatos_Id"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/field_search"
                  android:layout_gravity="center"
                  android:hint="@string/editTextInital"
                  android:paddingLeft="40dp"
                  android:paddingRight="40dp"
                  android:paddingBottom="6dp"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="16dp"
                  android:layout_marginLeft="16dp"
                  android:textSize="20dp"
                  android:textColor="#abb0bd"
                  android:textColorHint="#abb0bd"
                  android:textColorLink="@color/colorPrimary"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerContacts">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>